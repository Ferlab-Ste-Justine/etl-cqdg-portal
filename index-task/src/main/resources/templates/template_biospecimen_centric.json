{
  "index_patterns": [
    "biospecimen_centric*"
  ],
  "priority": 1,
  "template": {
    "settings": {
      "number_of_shards": 5,
      "analysis": {
        "normalizer": {
          "custom_normalizer": {
            "type": "custom",
            "char_filter": [],
            "filter": "lowercase"
          }
        }
      }
    },
    "mappings": {
      "dynamic_templates": [
        {
          "named_analyzers_sample": {
            "match_mapping_type": "string",
            "path_match": "sample*_id",
            "mapping": {
              "type": "keyword",
              "normalizer": "custom_normalizer"
            }
          }
        },
        {
          "named_analyzers_biospecimen": {
            "match_mapping_type": "string",
            "path_match": "biospecimen*_id",
            "mapping": {
              "type": "keyword",
              "normalizer": "custom_normalizer"
            }
          }
        },
        {
          "strings_as_keywords": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword"
            }
          }
        }
      ]
    }
  }
}
