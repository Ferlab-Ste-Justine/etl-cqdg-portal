{
  "index_patterns": [
    "participant_centric*"
  ],
  "priority": 1,
  "template": {
    "settings": {
      "number_of_shards": 5,
      "analysis": {
        "normalizer": {
          "custom_normalizer": {
            "type": "custom",
            "char_filter": [],
            "filter": "lowercase"
          }
        }
      }
    },
    "mappings": {
      "properties" : {
        "suggest" : {
          "type" : "completion",
          "analyzer" : "standard",
          "preserve_separators" : true,
          "preserve_position_increments" : true,
          "max_input_length" : 50
        },
        "study": {
          "properties": {
            "study_code" : {
              "type" : "keyword"
            }
          }
        },
        "observed_phenotype_tagged": {
          "properties": {
            "name": {
              "type": "keyword"
            },
            "source_text": {
              "type": "keyword"
            }
          }
        },
        "icd_tagged": {
          "properties": {
            "name": {
              "type": "keyword"
            }
          }
        },
        "mondo_tagged": {
          "properties": {
            "name": {
              "type": "keyword"
            },
            "source_text": {
              "type": "keyword"
            }
          }
        },
        "gender": {
          "type": "keyword"
        },
        "ethnicity": {
          "type": "keyword"
        },
        "biospecimens": {
          "properties": {
            "biospecimen_id": {
              "type": "keyword"
            },
            "biospecimen_tissue_source": {
              "type": "keyword"
            },
            "sample_type": {
              "type": "keyword"
            }
          }
        },
        "files": {
          "properties": {
            "file_id": {
              "type": "keyword"
            },
            "data_type": {
              "type": "keyword"
            },
            "data_category": {
              "type": "keyword"
            },
            "file_format": {
              "type": "keyword"
            },
            "sequencing_experiment": {
              "properties": {
                "experimental_strategy" : {
                  "type": "keyword"
                }
              }
            }
          }
        }
      }
    }
  }
}
